@page "/admin/orders"
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.EntityFrameworkCore
@using Microsoft.JSInterop
@using Shop.Models
@implements IDisposable

@inject AppDbContext Db
@inject IJSRuntime JsRuntime
@inject NavigationManager Navigation

<h4 class="mb-4 fw-bold">Quản lý đơn hàng</h4>

@if (!string.IsNullOrEmpty(successMessage))
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @successMessage
        <button type="button" class="btn-close" @onclick="() => successMessage = null" aria-label="Close"></button>
    </div>
}

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @errorMessage
        <button type="button" class="btn-close" @onclick="() => errorMessage = null" aria-label="Close"></button>
    </div>
}

@if (OrderData == null)
{
    <div class="text-center py-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Đang tải...</span>
        </div>
        <p class="mt-2 text-muted">Đang tải dữ liệu...</p>
    </div>
}
else
{
    <!-- Thống kê nhanh -->
    <div class="row mb-3">
        <div class="col-md-2">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Tổng đơn hàng</h6>
                    <h4 class="mb-0">@totalOrders</h4>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Chờ xử lý</h6>
                    <h4 class="mb-0">@pendingCount</h4>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Đang xử lý</h6>
                    <h4 class="mb-0">@processingCount</h4>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Đã hoàn thành</h6>
                    <h4 class="mb-0">@deliveredCount</h4>
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h6 class="card-subtitle mb-2">Đã hủy</h6>
                    <h4 class="mb-0">@cancelledCount</h4>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter và tìm kiếm -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="d-flex align-items-center gap-2">
            <label class="mb-0 fw-semibold">Trạng thái:</label>
            <InputSelect class="form-select" style="width: auto;" @bind-Value="selectedStatus" @bind-Value:after="HandleStatusChange">
                <option value="">Tất cả trạng thái</option>
                <option value="Pending">Chờ xử lý</option>
                <option value="Processing">Đang xử lý</option>
                <option value="Shipped">Đã giao hàng</option>
                <option value="Delivered">Đã nhận hàng</option>
                <option value="Cancelled">Đã hủy</option>
            </InputSelect>
        </div>
        <div class="d-flex align-items-center gap-2">
            <label class="mb-0 fw-semibold">Tìm kiếm:</label>
            <InputText class="form-control" style="width: 300px;" 
                       placeholder="Tìm kiếm theo mã đơn hàng, tên khách hàng..." 
                       @bind-Value="searchTerm" @bind-Value:after="HandleSearchInput" />
        </div>
    </div>

    <!-- Bảng đơn hàng -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center">Mã đơn hàng</th>
                            <th>Khách hàng</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th class="text-center">Ngày đặt</th>
                            <th class="text-end">Tổng tiền</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center" style="width: 150px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!OrderData.Any())
                        {
                            <tr>
                                <td colspan="8" class="text-center py-5 text-muted">
                                    <i class="fa-solid fa-inbox fa-2x mb-2 d-block"></i>
                                    Không có đơn hàng nào
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var order in OrderData)
                            {
                                <tr>
                                    <td class="text-center fw-semibold">@order.OrderNumber</td>
                                    <td>@order.CustomerName</td>
                                    <td>@order.CustomerEmail</td>
                                    <td>@order.CustomerPhone</td>
                                    <td class="text-center">@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="text-end fw-bold text-primary">@string.Format("{0:N0} ₫", order.TotalAmount)</td>
                                    <td class="text-center">
                                        <span class="badge @GetStatusBadgeClass(order.Status)">@GetStatusText(order.Status)</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <NavLink class="btn btn-sm btn-info" href="@($"/admin/orders/details/{order.OrderId}")" title="Xem chi tiết">
                                                <i class="fa-solid fa-eye"></i> Chi tiết
                                            </NavLink>
                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle dropdown-toggle-split" 
                                                    data-bs-toggle="dropdown" aria-expanded="false">
                                                <span class="visually-hidden">Toggle Dropdown</span>
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end">
                                                <li>
                                                    <a class="dropdown-item" href="#" @onclick="@(() => QuickUpdateStatus(order.OrderId, "Processing"))" @onclick:preventDefault>
                                                        <i class="fa-solid fa-spinner me-2"></i>Đang xử lý
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#" @onclick="@(() => QuickUpdateStatus(order.OrderId, "Shipped"))" @onclick:preventDefault>
                                                        <i class="fa-solid fa-truck me-2"></i>Đã giao hàng
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item" href="#" @onclick="@(() => QuickUpdateStatus(order.OrderId, "Delivered"))" @onclick:preventDefault>
                                                        <i class="fa-solid fa-check me-2"></i>Đã nhận hàng
                                                    </a>
                                                </li>
                                                <li>
                                                    <a class="dropdown-item text-warning" href="#" @onclick="@(() => QuickUpdateStatus(order.OrderId, "Cancelled"))" @onclick:preventDefault>
                                                        <i class="fa-solid fa-ban me-2"></i>Đã hủy
                                                    </a>
                                                </li>
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <a class="dropdown-item text-danger" href="#" @onclick="() => ConfirmDelete(order.OrderId)" @onclick:preventDefault>
                                                        <i class="fa-solid fa-trash me-2"></i>Xóa đơn hàng
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    @if (_totalPages > 1)
    {
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div class="text-muted">
                Hiển thị @((_pageNumber - 1) * _pageSize + 1) - @(Math.Min(_pageNumber * _pageSize, totalOrders)) trong tổng số @totalOrders đơn hàng
            </div>
            <nav>
                <ul class="pagination mb-0">
                    <li class="page-item @(_pageNumber == 1 ? "disabled" : "")">
                        <button class="page-link" @onclick="PreviousPage" disabled="@(_pageNumber == 1)">« Trước</button>
                    </li>
                    @for (int i = Math.Max(1, _pageNumber - 2); i <= Math.Min(_totalPages, _pageNumber + 2); i++)
                    {
                        var pageNum = i;
                        <li class="page-item @(_pageNumber == pageNum ? "active" : "")">
                            <button class="page-link" @onclick="() => GoToPage(pageNum)">@pageNum</button>
                        </li>
                    }
                    <li class="page-item @(_pageNumber == _totalPages ? "disabled" : "")">
                        <button class="page-link" @onclick="NextPage" disabled="@(_pageNumber == _totalPages)">Tiếp »</button>
                    </li>
                </ul>
            </nav>
        </div>
    }
    else
    {
        <div class="d-flex justify-content-between align-items-center mt-3">
            <div class="text-muted">
                Hiển thị @totalOrders đơn hàng
            </div>
            <div class="text-muted">
                Trang @_pageNumber / @_totalPages
            </div>
        </div>
    }
}

@code {
    private List<Order>? OrderData;
    private int _pageNumber = 1;
    private int _pageSize = 10;
    private int _totalPages = 1;
    private string selectedStatus = "";
    private string searchTerm = "";
    private string? successMessage;
    private string? errorMessage;
    
    // Thống kê
    private int totalOrders = 0;
    private int pendingCount = 0;
    private int processingCount = 0;
    private int deliveredCount = 0;
    private int cancelledCount = 0;

    // Semaphore để tránh concurrent database operations
    private readonly SemaphoreSlim _dbSemaphore = new SemaphoreSlim(1, 1);
    private bool _isLoading = false;

    // Dispose semaphore khi component bị dispose
    public void Dispose()
    {
        _dbSemaphore?.Dispose();
    }

    protected override async Task OnInitializedAsync()
    {
        // Đọc query parameter từ URL nếu có
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("search", out var searchValues))
        {
            searchTerm = searchValues.ToString();
        }
        
        await LoadData();
    }

    protected override async Task OnParametersSetAsync()
    {
        // Đọc lại query parameter khi parameters thay đổi
        var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
        if (Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query).TryGetValue("search", out var searchValues))
        {
            var newSearchTerm = searchValues.ToString();
            if (newSearchTerm != searchTerm)
            {
                searchTerm = newSearchTerm;
                _pageNumber = 1;
                await LoadData();
            }
        }
    }

    private async Task LoadData()
    {
        if (_isLoading) return;
        
        await _dbSemaphore.WaitAsync();
        try
        {
            _isLoading = true;
            await LoadPage();
            await LoadStatistics();
        }
        finally
        {
            _isLoading = false;
            _dbSemaphore.Release();
        }
    }

    private async Task LoadStatistics()
    {
        try
        {
            // Load tất cả thống kê trong một query để tránh concurrent issues
            var allOrders = await Db.Orders.AsNoTracking().ToListAsync();
            
            totalOrders = allOrders.Count;
            pendingCount = allOrders.Count(o => o.Status == "Pending");
            processingCount = allOrders.Count(o => o.Status == "Processing");
            deliveredCount = allOrders.Count(o => o.Status == "Delivered");
            cancelledCount = allOrders.Count(o => o.Status == "Cancelled");
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi khi tải thống kê: {ex.Message}";
        }
    }

    private async Task LoadPage()
    {
        try
        {
            var query = Db.Orders.AsQueryable();

            // Lọc theo trạng thái
            if (!string.IsNullOrEmpty(selectedStatus))
            {
                query = query.Where(o => o.Status == selectedStatus);
            }

            // Tìm kiếm
            if (!string.IsNullOrEmpty(searchTerm))
            {
                var search = searchTerm.ToLower();
                query = query.Where(o => 
                    o.OrderNumber.ToLower().Contains(search) || 
                    o.CustomerName.ToLower().Contains(search) ||
                    o.CustomerEmail.ToLower().Contains(search) ||
                    o.CustomerPhone.Contains(search));
            }

            var total = await query.CountAsync();
            _totalPages = (int)Math.Ceiling(total / (double)_pageSize);
            if (_totalPages == 0) _totalPages = 1;

            OrderData = await query
                .OrderByDescending(o => o.OrderDate)
                .Skip((_pageNumber - 1) * _pageSize)
                .Take(_pageSize)
                .AsNoTracking()
                .ToListAsync();

            totalOrders = total;
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi khi tải dữ liệu: {ex.Message}";
            OrderData = new List<Order>();
        }
    }

    private async Task HandleStatusChange()
    {
        _pageNumber = 1;
        await LoadData();
    }

    private async Task HandleSearchInput()
    {
        _pageNumber = 1;
        await LoadData();
    }

    private async Task NextPage()
    {
        if (_pageNumber < _totalPages)
        {
            _pageNumber++;
            await LoadData();
        }
    }

    private async Task PreviousPage()
    {
        if (_pageNumber > 1)
        {
            _pageNumber--;
            await LoadData();
        }
    }

    private async Task GoToPage(int page)
    {
        if (page >= 1 && page <= _totalPages)
        {
            _pageNumber = page;
            await LoadData();
        }
    }

    private async Task QuickUpdateStatus(int orderId, string newStatus)
    {
        try
        {
            var order = await Db.Orders.FirstOrDefaultAsync(o => o.OrderId == orderId);
            if (order == null)
            {
                errorMessage = "Không tìm thấy đơn hàng!";
                return;
            }

            order.Status = newStatus;

            // Tự động set ngày
            if (newStatus == "Shipped" && !order.ShippedDate.HasValue)
            {
                order.ShippedDate = DateTime.Now;
            }
            else if (newStatus == "Delivered")
            {
                order.DeliveredDate = DateTime.Now;
                if (!order.ShippedDate.HasValue)
                    order.ShippedDate = DateTime.Now;
            }

            await Db.SaveChangesAsync();
            successMessage = "Cập nhật trạng thái thành công!";
            
            await LoadData();
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi khi cập nhật: {ex.Message}";
        }
    }

    private async Task ConfirmDelete(int orderId)
    {
        var confirmed = await JsRuntime.InvokeAsync<bool>("eval", "confirm('Bạn có chắc chắn muốn xóa đơn hàng này? Hành động này không thể hoàn tác!')");
        
        if (confirmed)
        {
            await DeleteOrder(orderId);
        }
    }

    private async Task DeleteOrder(int orderId)
    {
        try
        {
            var order = await Db.Orders
                .Include(o => o.OrderItems)
                .FirstOrDefaultAsync(o => o.OrderId == orderId);

            if (order == null)
            {
                errorMessage = "Không tìm thấy đơn hàng!";
                return;
            }

            // Xóa OrderItems trước
            Db.OrderItems.RemoveRange(order.OrderItems);
            
            // Xóa Order
            Db.Orders.Remove(order);
            
            await Db.SaveChangesAsync();
            successMessage = "Xóa đơn hàng thành công!";
            
            await LoadData();
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi khi xóa đơn hàng: {ex.Message}";
        }
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning text-dark",
            "Processing" => "bg-info text-white",
            "Shipped" => "bg-primary text-white",
            "Delivered" => "bg-success text-white",
            "Cancelled" => "bg-danger text-white",
            _ => "bg-secondary text-white"
        };
    }

    private string GetStatusText(string status)
    {
        return status switch
        {
            "Pending" => "Chờ xử lý",
            "Processing" => "Đang xử lý",
            "Shipped" => "Đã giao hàng",
            "Delivered" => "Đã nhận hàng",
            "Cancelled" => "Đã hủy",
            _ => status
        };
    }
}
