@page "/admin/products/edit/{id:long}"
@using Microsoft.AspNetCore.Components.Authorization
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.EntityFrameworkCore
@using Shop.Models

@inject AppDbContext Db
@inject NavigationManager Nav
@inject AuthenticationStateProvider AuthStateProvider

<h4>Chỉnh sửa sản phẩm</h4>
@if (product == null)
{
    <p><em>Đang tải sản phẩm...</em></p>
}
else
{
    <EditForm Model="product" OnValidSubmit="HandleUpdate">
        <DataAnnotationsValidator />
        <ValidationSummary />
        @if (!string.IsNullOrEmpty(uploadError))
        {
            <div class="alert alert-danger">@uploadError</div>
        }

        <div class="mb-3">
            <label>Tên sản phẩm</label>
            <InputText class="form-control" @bind-Value="product.Name" />
        </div>

        <div class="mb-3">33
            <label>Mô tả</label>
            <InputTextArea class="form-control" @bind-Value="product.Description" Rows="3" />
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Giá</label>
                <InputNumber class="form-control" @bind-Value="product.Price" />
            </div>
            <div class="col-md-6 mb-3">
                <label>Giá KM (nếu có)</label>
                <InputNumber class="form-control" @bind-Value="product.SalePrice" />
            </div>
        </div>

        <div class="mb-3">
            <label>Ảnh sản phẩm</label>
            <InputFile OnChange="HandleFileSelected" />
        </div>

        <div class="mb-3">
            <label>Số lượng tồn kho</label>
            <InputNumber class="form-control" @bind-Value="product.StockQuantity" />
        </div>

        <div class="mb-3">
            <label>Danh mục</label>
            @if (categories != null)
            {
                <InputSelect class="form-select" @bind-Value="product.CategoryId">
                    <option value="">-- Chọn danh mục --</option>
                    @foreach (var c in categories)
                    {
                        <option value="@c.CategoryId">@c.Name</option>
                    }
                </InputSelect>
            }
            else
            {
                <p>Đang tải danh mục...</p>
            }
        </div>

        <div class="form-check">
            <InputCheckbox class="form-check-input" @bind-Value="product.IsActive" />
            <label class="form-check-label">Kích hoạt</label>
        </div>

        <div class="form-check">
            <InputCheckbox class="form-check-input" @bind-Value="product.IsFeatured" />
            <label class="form-check-label">Sản phẩm nổi bật</label>
        </div>

        <div class="mt-3">
            <button class="btn btn-primary" type="submit">Cập nhật</button>
            <NavLink class="btn btn-secondary" href="/admin/products">Quay lại</NavLink>
        </div>
    </EditForm>
}
@code {
    [Parameter] public long id { get; set; }
    private Product? product;
    private List<Category>? categories;
    private IBrowserFile? selectedFile;
    private string? uploadError;


    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
    }
    protected override async Task OnInitializedAsync()
    {
        product = await Db.Products.FindAsync(id);
        categories = await Db.Categories.ToListAsync();
    }

    private async Task HandleUpdate()
    {
        if (product == null) return;

        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        if (selectedFile != null)
        {
            try
            {
                long maxFileSize = 10_000_000; // 10MB

                if (selectedFile.Size > maxFileSize)
                {
                    uploadError = "File quá lớn. Vui lòng chọn file <= 10MB.";
                    return;
                }

                var fileName = Path.GetFileName(selectedFile.Name);
                var folderPath = Path.Combine("wwwroot", "images", "products");
                Directory.CreateDirectory(folderPath);
                var filePath = Path.Combine(folderPath, fileName);

                await using var fileStream = new FileStream(filePath, FileMode.Create);
                await using var inputStream = selectedFile.OpenReadStream(maxFileSize);
                await inputStream.CopyToAsync(fileStream);

                product.Image = $"/images/products/{fileName}";
                uploadError = null;
            }
            catch (Exception ex)
            {
                uploadError = "Có lỗi khi upload file: " + ex.Message;
                return;
            }
        }
        product.UpdatedAt = DateTime.Now;
        product.UpdatedBy = user.Identity?.Name ?? "Anonymous";
        Db.Products.Update(product);
        await Db.SaveChangesAsync();
        Nav.NavigateTo("/admin/products");
    }
}
