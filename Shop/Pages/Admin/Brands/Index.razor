@page "/admin/brands"
@using Shop.Models
@inject AppDbContext Db
@inject NavigationManager Nav

<h3>Danh sách Brand</h3>

<button class="btn btn-primary mb-3" @onclick="CreateBrand">+ Thêm Brand</button>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Tên</th>
            <th>Slug</th>
            <th>Mô tả</th>
            <th>Ảnh</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (brands == null || !brands.Any())
        {
            <tr><td colspan="5">Chưa có dữ liệu Brand hoặc đang tải...</td></tr>
        }
        else
        {
            @foreach (var b in brands)
            {
                <tr>
                    <td>@b.Name</td>
                    <td>@b.Slug</td>
                    <td>@b.Description</td>
                    <td>
                        @if (!string.IsNullOrEmpty(b.Image))
                        {
                            <img src="images/brands/@b.Image" width="60" />
                        }
                    </td>
                    <td>
                        <button class="btn btn-warning btn-sm" @onclick="(() => EditBrand(b.Id))">Sửa</button>
                        <button class="btn btn-danger btn-sm" @onclick="(() => DeleteBrand(b.Id))">Xóa</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@code {
    List<Brand> brands = new();

    protected override void OnInitialized()
    {
        brands = Db.Brands.ToList();
    }

    void CreateBrand()
    {
        Nav.NavigateTo("/admin/brands/upsert");
    }

    void EditBrand(int id)
    {
        Nav.NavigateTo($"/admin/brands/upsert/{id}");
    }

    void DeleteBrand(int id)
    {
        var brand = Db.Brands.Find(id);
        if (brand != null)
        {
            Db.Brands.Remove(brand);
            Db.SaveChanges();
        }

        // Load lại danh sách
        brands = Db.Brands.ToList();
        StateHasChanged();
    }
}
