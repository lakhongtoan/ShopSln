@page "/admin/brands"
@using Shop.Models
@using Microsoft.EntityFrameworkCore
@inject AppDbContext Db
@inject NavigationManager Nav

<h3>Danh sách Brand</h3>

<button class="btn btn-primary mb-3" @onclick="CreateBrand">+ Thêm Brand</button>

@if (brands == null)
{
    <p><em>Đang tải dữ liệu...</em></p>
}
else if (!brands.Any())
{
    <p>Chưa có dữ liệu Brand.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên</th>
                <th>Slug</th>
                <th>Mô tả</th>
                <th>Ảnh</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var b in brands)
            {
                <tr>
                    <td>@b.Name</td>
                    <td>@b.Slug</td>
                    <td>@b.Description</td>
                    <td>
                        @if (!string.IsNullOrEmpty(b.Image))
                        {
                            <img src="images/brands/@b.Image" width="60" alt="@b.Name" />
                        }
                    </td>
                    <td>
                        <button class="btn btn-warning btn-sm" @onclick="(() => EditBrand(b.Id))">Sửa</button>
                        <button class="btn btn-danger btn-sm" @onclick="(() => DeleteBrand(b.Id))">Xóa</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Brand>? brands;

    protected override async Task OnInitializedAsync()
    {
        brands = await Db.Brands
            .AsNoTracking()
            .OrderBy(b => b.Name)
            .ToListAsync();
    }

    void CreateBrand()
    {
        Nav.NavigateTo("/admin/brands/upsert");
    }

    void EditBrand(int id)
    {
        Nav.NavigateTo($"/admin/brands/upsert/{id}");
    }

    private async Task DeleteBrand(int id)
    {
        var brand = await Db.Brands.FindAsync(id);
        if (brand != null)
        {
            Db.Brands.Remove(brand);
            await Db.SaveChangesAsync();
        }

        // Load lại danh sách
        brands = await Db.Brands
            .AsNoTracking()
            .OrderBy(b => b.Name)
            .ToListAsync();
        StateHasChanged();
    }
}
