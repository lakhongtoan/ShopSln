var fileName = $"{Guid.NewGuid()}{Path.GetExtension(uploadedFile.Name)}";
            var filePath = Path.Combine(uploadsFolder, fileName);

            await using var stream = uploadedFile.OpenReadStream(maxAllowedSize: 5 * 1024 * 1024);
            await using var fileStream = File.Create(filePath);
            await stream.CopyToAsync(fileStream);

            brand!.Image = $"/images/brands/{fileName}";
            previewImage = brand.Image;
        }
    }

    async Task Update()
    {
        if (brand == null) return;

        Db.Brands.Update(brand);
        await Db.SaveChangesAsync();
        Nav.NavigateTo("/admin/brands");
    }

