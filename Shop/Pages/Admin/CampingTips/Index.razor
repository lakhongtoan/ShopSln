@page "/admin/campingtips"
@using Shop.Models
@using Microsoft.EntityFrameworkCore
@using Microsoft.JSInterop
@inject AppDbContext Db
@inject NavigationManager Nav
@inject IJSRuntime JsRuntime

<h3>Kinh nghiệm cắm trại</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<button class="btn btn-primary mb-3" @onclick="Create">
    + Thêm bài viết
</button>

@if (tips is null)
{
    <p><em>Đang tải dữ liệu...</em></p>
}
else if (!tips.Any())
{
    <p>Chưa có bài viết nào.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tiêu đề</th>
                <th>Tác giả</th>
                <th>Ngày tạo</th>
                <th>Xuất bản</th>
                <th style="width:150px;">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var t in tips)
            {
                <tr>
                    <td>@t.Title</td>
                    <td>@(string.IsNullOrEmpty(t.Author) ? "-" : t.Author)</td>
                    <td>@t.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>
                        <span class="badge @(t.IsPublished ? "bg-success" : "bg-secondary")">
                            @(t.IsPublished ? "Có" : "Không")
                        </span>
                    </td>
                    <td>
                        <button class="btn btn-sm btn-warning me-2"
                                @onclick="() => Edit(t.Id)">
                            Sửa
                        </button>

                        <button class="btn btn-sm btn-danger"
                                @onclick="() => Delete(t.Id)">
                            Xóa
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<CampingTip>? tips;
    private string? errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        try
        {
            tips = await Db.CampingTips
                .AsNoTracking()
                .OrderByDescending(x => x.CreatedAt)
                .ToListAsync();
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi khi tải dữ liệu: {ex.Message}";
        }
    }

    void Create() => Nav.NavigateTo("/admin/campingtips/upsert/0");

    void Edit(int id) => Nav.NavigateTo($"/admin/campingtips/upsert/{id}");

    private async Task Delete(int id)
    {
        var entity = await Db.CampingTips.FindAsync(id);
        if (entity is null)
        {
            errorMessage = "Không tìm thấy bài viết!";
            return;
        }

        var confirmed = await JsRuntime.InvokeAsync<bool>("confirm", $"Bạn có chắc muốn xóa bài viết '{entity.Title}'?");
        if (!confirmed) return;

        try
        {
            Db.CampingTips.Remove(entity);
            await Db.SaveChangesAsync();
            errorMessage = null;
            await LoadData();
            StateHasChanged();
        }
        catch (Exception ex)
        {
            errorMessage = $"Lỗi khi xóa: {ex.Message}";
        }
    }
}
