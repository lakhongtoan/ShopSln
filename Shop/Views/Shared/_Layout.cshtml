@{
    var searchTerm = ViewBag.SearchTerm as string;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop</title>

    <!-- Bootstrap & Theme CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/css/price-range.css" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/main.css" rel="stylesheet">
    <link href="~/css/responsive.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/header.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
</head>

<body>
    <!-- ================= HEADER ================= -->
                <header id="header" class="header-transparent">
                <div class="container d-flex justify-content-between align-items-center py-3">
                    <!-- LOGO -->
                    <div class="logo">
                        <a asp-controller="/" asp-action="Index">
                            <img src="~/images/home/logo.png" alt="Logo" class="logo-img" />
                        </a>
                    </div>

                   <!-- NAVIGATION -->
                    <nav class="mainmenu">
                        <ul class="nav">

                            <!-- Trang chủ (có dropdown mới) -->
                            <li class="dropdown">
                                <a asp-controller="Shop" asp-action="Index" class="active">
                                    Trang chủ <i class="fa fa-angle-down"></i>
                                </a>
                                <ul role="menu" class="sub-menu">
                                    <li><a href="/Shop/Index#experience">Kinh nghiệm cắm trại</a></li>
                                    <li><a href="/Shop/Index#brand">Thương hiệu</a></li>
                                </ul>
                            </li>

                            <!-- Cửa hàng -->
                            <li class="dropdown">
                                <a asp-controller="Shop" asp-action="Shop">
                                    Cửa hàng <i class="fa fa-angle-down"></i>
                                </a>
                                <ul role="menu" class="sub-menu">
                                    <li><a asp-controller="Shop" asp-action="Shop">Sản phẩm</a></li>
                                    <li><a asp-controller="Shop" asp-action="Cart">Giỏ hàng</a></li>
                                    <li><a asp-controller="Shop" asp-action="Checkout">Thanh toán</a></li>
                                </ul>
                            </li>

                            <!-- Giới thiệu -->
                            <li>
                                <a asp-controller="Shop" asp-action="About">Giới thiệu</a>
                            </li>

                            <!-- Liên hệ -->
                            <li>
                                <a asp-controller="Shop" asp-action="Contact">Liên hệ</a>
                            </li>

                        </ul>
                    </nav>

        <!-- SEARCH + LOGIN + CART -->
        <div class="header-right d-flex align-items-center gap-3">
            <!-- SEARCH -->
            <div class="search_box">
                <form asp-controller="Shop" asp-action="Shop" method="get" class="search-form">
                    <input type="text" name="search" placeholder="Tìm kiếm sản phẩm..." value="@searchTerm" />
                </form>
            </div>

            <!-- CART ICON -->
            <div class="cart-icon position-relative">
                    <a asp-controller="Shop" asp-action="Cart" class="text-white position-relative">
                    <i class="fa fa-shopping-cart fa-lg"></i>
                    <span class="cart-count badge bg-warning text-dark position-absolute top-0 start-100 translate-middle rounded-pill" style="font-size:0.7rem;">
                        0
                    </span>
                </a>
            </div>
                <!-- USER MENU -->
                @if (User?.Identity?.IsAuthenticated == true)
                {
                    <div class="dropdown">
                        <a class="btn btn-login dropdown-toggle d-flex align-items-center" href="#" role="button" id="Menu" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fa fa-user fa-lg me-1"></i> @User.Identity.Name
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="Menu">
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                    <i class="fa-solid fa-id-card me-2"></i> Thông tin tài khoản
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="MyOrders">
                                    <i class="fa fa-list me-2"></i> Đơn hàng của tôi
                                </a>
                            </li>
                            @if (User.IsInRole("Admin"))
                            {
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a href="/admin" class="dropdown-item">
                                        <i class="fa fa-cogs me-2"></i> Quản trị
                                    </a>
                                </li>
                            }
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Account" asp-action="Logout">
                                    <i class="fa fa-sign-out-alt me-2"></i> Đăng xuất
                                </a>
                            </li>
                        </ul>
                    </div>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Login" class="btn-login">
                        <i class="fa fa-lock"></i> Đăng nhập / Đăng ký
                    </a>
                }

        </div>
    </div>
</header>
    <!-- ================= /HEADER ================= -->


