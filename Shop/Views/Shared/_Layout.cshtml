<body>
    <!-- ================= HEADER ================= -->
    <header id="header" class="header-transparent">
    <div class="container d-flex justify-content-between align-items-center py-3">
        <!-- LOGO -->
        <div class="logo">
            <a asp-controller="Home" asp-action="Index">
                <img src="~/images/home/logo.png" alt="Logo" class="logo-img" />
            </a>
        </div>

        <!-- NAVIGATION -->
        <nav class="mainmenu">
            <ul class="nav">
                <li><a asp-controller="Shop" asp-action="Index" class="active">Trang chủ</a></li>
                <li class="dropdown">
                    <a asp-controller="Shop" asp-action="Shop">Cửa hàng <i class="fa fa-angle-down"></i></a>
                    <ul role="menu" class="sub-menu">
                        <li><a asp-controller="Shop" asp-action="Shop">Sản phẩm</a></li>
                        <li><a asp-controller="Shop" asp-action="Cart">Giỏ hàng</a></li>
                        <li><a asp-controller="Shop" asp-action="Checkout">Thanh toán</a></li>
                    </ul>
                </li>
                <li><a asp-controller="Shop" asp-action="Contact">Liên hệ</a></li>
            </ul>
        </nav>

        <!-- SEARCH + LOGIN + CART -->
        <div class="header-right d-flex align-items-center gap-3">
            <!-- SEARCH -->
            <div class="search_box">
                <form asp-controller="Shop" asp-action="Shop" method="get" class="search-form">
                    <input type="text" name="search" placeholder="Tìm kiếm sản phẩm..." value="@searchTerm" />
                    <button type="submit"><i class="fa fa-search"></i></button>
                </form>
            </div>

            <!-- CART ICON -->
            <div class="cart-icon position-relative">
                <a asp-controller="Shop" asp-action="Checkout" class="text-white position-relative">
                    <i class="fa fa-shopping-cart fa-lg"></i>
                    <span class="cart-count badge bg-warning text-dark position-absolute top-0 start-100 translate-middle rounded-pill" style="font-size:0.7rem;">
                        0
                    </span>
                </a>
            </div>

            <!-- LOGIN / LOGOUT -->
            @if (User?.Identity?.IsAuthenticated == true)
            {
                <a asp-controller="Account" asp-action="Logout" class="btn-login">
                    <i class="fa fa-sign-out"></i> Đăng xuất (@User.Identity.Name)
                </a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn-login">
                    <i class="fa fa-lock"></i> Đăng nhập / Đăng ký
                </a>
            }
        </div>
    </div>
</header>

    <!-- ================= /HEADER ================= -->


    <!-- ================= BANNER / SLIDER (nằm trong layout) ================= -->
    <section id="slider" class="banner-hero">
        <div id="slider-carousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="4000">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#slider-carousel" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#slider-carousel" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#slider-carousel" data-bs-slide-to="2"></button>
            </div>

            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/images/home/slider_1.webp" class="d-block w-100 hero-img" alt="Banner 1">
                </div>
                <div class="carousel-item">
                    <img src="~/images/home/slider_2.webp" class="d-block w-100 hero-img" alt="Banner 2">
                </div>
                <div class="carousel-item">
                    <img src="~/images/home/slider_3.webp" class="d-block w-100 hero-img" alt="Banner 3">
                </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#slider-carousel" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Trước</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#slider-carousel" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Sau</span>
            </button>
        </div>
    </section>
