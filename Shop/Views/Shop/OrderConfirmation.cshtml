@model Shop.Models.Order
@{
    ViewData["Title"] = "Order Confirmation";
}

<section id="cart_items">
    <div class="container">
        <div class="breadcrumbs">
            <ol class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Xác nhận đơn hàng</li>
            </ol>
        </div>
        
        <div class="row">
            <div class="col-sm-12">
                <div class="alert alert-success">
                    <h2>Cảm ơn bạn đã đặt hàng!</h2>
                    <p>Đơn hàng của bạn đã được đặt thành công.</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-6">
                <h3>Thông tin đơn hàng</h3>
                <table class="table table-bordered">
                    <tr>
                        <td><strong>Mã đơn hàng:</strong></td>
                        <td>@Model.OrderNumber</td>
                    </tr>
                    <tr>
                        <td><strong>Ngày đặt:</strong></td>
                        <td>@Model.OrderDate.ToString("MMM dd, yyyy")</td>
                    </tr>
                    <tr>
                        <td><strong>Trạng thái:</strong></td>
                        <td>
                            @{
                                string statusText = Model.Status switch
                                {
                                    "Pending" => "Chờ xử lý",
                                    "Processing" => "Đang xử lý",
                                    "Shipped" => "Đang giao",
                                    "Delivered" => "Đã giao",
                                    "Cancelled" => "Đã hủy",
                                    _ => Model.Status
                                };
                            }
                            <span class="label label-info">@statusText</span>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>Tổng tiền:</strong></td>
                        <td><strong>$@Model.TotalAmount.ToString("N0") ₫</strong></td>
                    </tr>
                </table>
            </div>
            
            <div class="col-sm-6">
                <h3>Thông tin khách hàng</h3>
                <table class="table table-bordered">
                    <tr>
                        <td><strong>Họ tên:</strong></td>
                        <td>@Model.CustomerName</td>
                    </tr>
                    <tr>
                        <td><strong>Email:</strong></td>
                        <td>@Model.CustomerEmail</td>
                    </tr>
                    <tr>
                        <td><strong>Số điện thoại:</strong></td>
                        <td>@Model.CustomerPhone</td>
                    </tr>
                    <tr>
                        <td><strong>Địa chỉ giao hàng:</strong></td>
                        <td>@Model.ShippingAddress</td>
                    </tr>
                </table>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">
                <h3>Chi tiết đơn hàng</h3>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Giá</th>
                                <th>Số lượng</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.OrderItems == null || !Model.OrderItems.Any())
                            {
                                <tr>
                                    <td colspan="4" class="text-center text-muted">
                                        <em>Không có sản phẩm nào trong đơn hàng này.</em>
                                    </td>
                                </tr>
                            }
                            else
                            {
                                @foreach (var item in Model.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ProductImage))
                                            {
                                                <img src="@item.ProductImage" alt="@item.ProductName" style="width: 50px; height: 50px; margin-right: 10px; object-fit: contain;">
                                            }
                                            else
                                            {
                                                <img src="/images/home/anh.jpg" alt="@item.ProductName" style="width: 50px; height: 50px; margin-right: 10px; object-fit: contain;">
                                            }
                                            @item.ProductName
                                        </td>
                                        <td>$@item.UnitPrice.ToString("N2")</td>
                                        <td>@item.Quantity</td>
                                        <td>$@item.TotalPrice.ToString("N2")</td>
                                    </tr>
                                }
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="3"><strong>Tạm tính:</strong></td>
                                <td><strong>@Model.SubTotal.ToString("N0") ₫</strong></td>
                            </tr>
                            <tr>
                                <td colspan="3"><strong>Phí vận chuyển:</strong></td>
                                <td><strong>@Model.ShippingAmount.ToString("N0") ₫</strong></td>
                            </tr>
                            <tr>
                                <td colspan="3"><strong>Tổng cộng:</strong></td>
                                <td><strong>@Model.TotalAmount.ToString("N0") ₫</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12 text-center">
                <a href="@Url.Action("Index", "Shop")" class="btn btn-primary">Tiếp tục mua sắm</a>
                <a href="@Url.Action("Shop", "Shop")" class="btn btn-primary">Xem tất cả sản phẩm</a>
            </div>
        </div>
    </div>
</section>
