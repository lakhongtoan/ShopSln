@model dynamic
@{
    ViewData["Title"] = "Home";
    var featuredProducts = ViewBag.FeaturedProducts as List<Shop.Models.Product>;
    var campingTips = ViewBag.CampingTips as List<Shop.Models.CampingTip>;
    var categories = ViewBag.Categories as List<Shop.Models.Category>;
}

<!-- ✅ Gọi file banner riêng -->

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Danh mục</h2>
                    <div class="panel-group category-products" id="accordian">
                        @if (categories != null)
                        {
                            @foreach (var category in categories)
                            {
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a asp-controller="Shop" asp-action="Shop" asp-route-categoryId="@category.CategoryId">
                                                @category.Name
                                            </a>
                                        </h4>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
             <div class="brands_products">
                        <!--brands_products-->
                        <h2>Thương hiệu</h2>
                        <div class="brands-name">
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#"> <span class="pull-right">(50)</span>Acne</a></li>
                                <li><a href="#"> <span class="pull-right">(56)</span>Grüne Erde</a></li>
                                <li><a href="#"> <span class="pull-right">(27)</span>Albiro</a></li>
                                <li><a href="#"> <span class="pull-right">(32)</span>Ronhill</a></li>
                                <li><a href="#"> <span class="pull-right">(5)</span>Oddmolly</a></li>
                                <li><a href="#"> <span class="pull-right">(9)</span>Boudestijn</a></li>
                                <li><a href="#"> <span class="pull-right">(4)</span>Rösch creative culture</a></li>
                            </ul>
                        </div>
                    </div>
                    <!--/brands_products-->
            </div>
            
            <div class="col-sm-9 padding-right">
                <div class="features_items">
                    <h2 class="title text-center">Sản phẩm nổi bật</h2>
                    @if (featuredProducts != null)
                    {
                        @foreach (var product in featuredProducts)
                        {
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo">
                                            <img src="@(product.Image ?? "/images/home/anh.jpg")" alt="" />
                                            <h2>@product.Price.ToString("N0") ₫</h2>
                                            <p>@product.Name</p>
                                            <a href="#" class="btn btn-default add-to-cart" data-product-id="@product.ProductID">
                                                <i class="fa fa-shopping-cart"></i>Thêm vào giỏ
                                            </a>
                                        </div>
                                        <div class="product-overlay">
                                            <div class="overlay-content">
                                                <h2>@product.Price.ToString("N0") ₫</h2>
                                                <p>@product.Name</p>
                                                <a href="#" class="btn btn-default add-to-cart" data-product-id="@product.ProductID">
                                                    <i class="fa fa-shopping-cart"></i>Thêm vào giỏ
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="choose">
                                        <ul class="nav-pills nav-justified">
                                            <a asp-controller="Shop" asp-action="Details" asp-route-id="@product.ProductID" class="btn btn-default mb-3">
                                                <i class="fa fa-plus-square"></i> Xem chi tiết
                                            </a>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div><!-- ✅ đóng col-sm-9 -->
        </div><!-- ✅ đóng row -->
    </div><!-- ✅ đóng container -->
</section>
<!-- ================== KINH NGHIỆM CẮM TRẠI ================== -->
<!-- ================== KINH NGHIỆM CẮM TRẠI ================== -->
<section id="experience" class="py-5">
    <h2 class="section-title text-center mb-5">Kinh Nghiệm Cắm Trại</h2>

    <div class="blog-section">
        <div class="container">
            <div class="row g-4 justify-content-center">

                @if (campingTips != null)
                {
                    @foreach (var item in campingTips)
                {
                    <div class="col-md-4">
                        <div class="blog-card card border-0 shadow-sm h-100">
                            <div class="position-relative overflow-hidden">
                                <img src="@item.Image" class="card-img-top" alt="@item.Title" />

                                <div class="blog-date bg-primary text-white text-center">
                                    <span>@item.CreatedAt.Day</span>
                                    <small>@item.CreatedAt.ToString("MMM")</small>
                                </div>

                                <div class="blog-overlay d-flex align-items-center justify-content-center">
                                    <a href="#" class="btn btn-light btn-sm">Xem chi tiết</a>
                                </div>
                            </div>

                            <div class="card-body">
                                <h5 class="card-title fw-semibold">@item.Title</h5>
                                <p class="card-text text-muted">
                                    @{
                                        var text = item.Content ?? "";
                                        var preview = text.Length > 120 ? text.Substring(0, 120) + "..." : text;
                                    }
                                    @preview
                                </p>
                                <a href="#" class="btn btn-outline-primary btn-sm mt-2">XEM THÊM</a>
                            </div>
                        </div>
                    </div>
                    }
                }

            </div>
        </div>
    </div>
</section>
<!-- ================== /KINH NGHIỆM CẮM TRẠI ================== -->
@{
    var brands = ViewBag.Brands as List<Shop.Models.Brand>;
}

@if (brands != null && brands.Any())
{
    <section id="brand" class="pt-4 pb-4">
        <div class="container">
            <h2 class="text-center mb-4">Thương hiệu</h2>
            <div class="row">

                @foreach (var b in brands)
                {
                    <div class="col-md-3 col-6 text-center mb-4">
                        <img src="~/images/brands/@b.Image" 
                             class="img-fluid"
                             style="height:100px; object-fit:contain;" />
                        <h5 class="mt-2">@b.Name</h5>
                    </div>
                }

            </div>
        </div>
    </section>
}
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.add-to-cart').click(function (e) {
                e.preventDefault();
                var productId = $(this).data('product-id');
                $.ajax({
                    url: '@Url.Action("AddToCart", "Shop")',
                    type: 'POST',
                    data: { productId: productId, quantity: 1 },
                    success: function (response) {
                        if (response.success) {
                            $('.cart-count').text(response.cartCount);
                            alert('Đã thêm sản phẩm vào giỏ!');
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Lỗi khi thêm sản phẩm!');
                    }
                });
            });
        });
    </script>
}
