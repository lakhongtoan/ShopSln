@model List<Shop.Models.Product>
@{
    ViewData["Title"] = "Shop";
    var categories = ViewBag.Categories as List<Shop.Models.Category>;
    var currentCategoryId = ViewBag.CurrentCategoryId as int?;
    var searchTerm = ViewBag.SearchTerm as string;
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
    var totalProducts = ViewBag.TotalProducts as int? ?? 0;
}

<section>
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Danh mục</h2>
                    <div class="panel-group category-products" id="accordian">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a asp-controller="Shop" asp-action="Shop">
                                        Tất cả sản phẩm
                                    </a>
                                </h4>
                            </div>
                        </div>
                        @if (categories != null)
                        {
                            @foreach (var category in categories)
                            {
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a asp-controller="Shop" asp-action="Shop" asp-route-categoryId="@category.CategoryId">
                                                @category.Name
                                            </a>
                                        </h4>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <div class="brands_products">
                        <!--brands_products-->
                        <h2>Thương hiệu</h2>
                        <div class="brands-name">
                            <ul class="nav nav-pills nav-stacked">
                                <li><a href="#"> <span class="pull-right">(50)</span>Acne</a></li>
                                <li><a href="#"> <span class="pull-right">(56)</span>Grüne Erde</a></li>
                                <li><a href="#"> <span class="pull-right">(27)</span>Albiro</a></li>
                                <li><a href="#"> <span class="pull-right">(32)</span>Ronhill</a></li>
                                <li><a href="#"> <span class="pull-right">(5)</span>Oddmolly</a></li>
                                <li><a href="#"> <span class="pull-right">(9)</span>Boudestijn</a></li>
                                <li><a href="#"> <span class="pull-right">(4)</span>Rösch creative culture</a></li>
                            </ul>
                        </div>
                    </div>
                    <!--/brands_products-->

                    <div class="price-range">
                        <!--price-range-->
                        <h2>Khoảng giá</h2>
                        <div class="well text-center">
                            <input type="text" class="span2" value="" data-slider-min="0" data-slider-max="600" data-slider-step="5" data-slider-value="[250,450]" id="sl2"><br />
                            <b class="pull-left">$ 0</b> <b class="pull-right">$ 600</b>
                        </div>
                    </div>
                    <!--/price-range-->

                    <div class="shipping text-center">
                        <!--shipping-->
                        <img src="images/home/shipping.jpg" alt="" />
                    </div>
                    <!--/shipping-->

                </div>
            </div>

            <div class="col-sm-9 padding-right">
                <div class="features_items">
                <div class="category-tab">
                    <!--category-tab-->
                   
                    <!--features_items-->

                                    <section class="shop-items-section">
                        <h2 class="title text-center">Sản phẩm</h2>
                        <div class="col-sm-12">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#tshirt" data-toggle="tab">T-Shirt</a></li>
                                <li><a href="#blazers" data-toggle="tab">Blazers</a></li>
                                <li><a href="#sunglass" data-toggle="tab">Sunglass</a></li>
                                <li><a href="#kids" data-toggle="tab">Kids</a></li>
                                <li><a href="#poloshirt" data-toggle="tab">Polo shirt</a></li>
                            </ul>
                        </div>
                    </section>

                    @if (Model != null && Model.Any())
                    {
                        @foreach (var product in Model)
                        {
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo">
                                            <img src="@(product.Image ?? "/images/home/anh.jpg")" alt="" />
                                            <h2>@product.Price.ToString("N0") ₫</h2>
                                            <p>@product.Name</p>
                                            <a href="#" class="btn btn-default add-to-cart" data-product-id="@product.ProductID">
                                                <i class="fa fa-shopping-cart"></i>Thêm vào giỏ
                                            </a>
                                        </div>
                                        <div class="product-overlay">
                                            <div class="overlay-content">
                                                <h2>@product.Price.ToString("N0") ₫</h2>
                                                <p>@product.Name</p>
                                                <a href="#" class="btn btn-default add-to-cart" data-product-id="@product.ProductID">
                                                    <i class="fa fa-shopping-cart"></i>Thêm vào giỏ
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="choose">
                                        <ul class="nav-pills nav-justified">
                                            <a asp-controller="Shop" asp-action="Details" asp-route-id="@product.ProductID" class="btn btn-default mb-3">
                                                <i class="fa fa-plus-square"></i> Xem chi tiết
                                            </a>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="col-sm-12">
                            <p class="text-center">Không tìm thấy sản phẩm.</p>
                        </div>
                    }
                </div>
                <!--features_items-->

                <!-- Pagination -->
                @if (totalPages > 1)
                {
                    <div class="row">
                        <div class="col-sm-12">
                            <ul class="pagination">
                                @for (int i = 1; i <= totalPages; i++)
                                {
                                    <li class="@(i == currentPage ? "active" : "")">
                                        <a asp-controller="Shop" asp-action="Shop" 
                                           asp-route-categoryId="@currentCategoryId" 
                                           asp-route-search="@searchTerm" 
                                           asp-route-page="@i">@i</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
             
                <!--/category-tab-->
</section>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.add-to-cart').click(function(e) {
                e.preventDefault();
                var $btn = $(this);
                
                // Ngăn chặn click nhiều lần khi đang xử lý
                if ($btn.data('processing')) {
                    return false;
                }
                
                $btn.data('processing', true);
                var productId = $btn.data('product-id');
                
                $.ajax({
                    url: '@Url.Action("AddToCart", "Shop")',
                    type: 'POST',
                    dataType: 'json',
                    data: { productId: productId, quantity: 1 },
                    success: function(response) {
                        if (response && response.success) {
                            $('.cart-count').text(response.cartCount || 0);
                            alert('Đã thêm sản phẩm vào giỏ hàng!');
                        } else {
                            var message = (response && response.message) ? response.message : 'Không thể thêm sản phẩm vào giỏ hàng';
                            alert(message);
                        }
                    },
                    error: function(xhr, status, error) {
                        var errorMsg = 'Lỗi khi thêm sản phẩm vào giỏ hàng';
                        if (xhr.responseJSON && xhr.responseJSON.message) {
                            errorMsg = xhr.responseJSON.message;
                        }
                        alert(errorMsg);
                    },
                    complete: function() {
                        // Cho phép click lại sau khi xử lý xong
                        $btn.data('processing', false);
                    }
                });
            });
        });
    </script>
}

