@model Shop.Models.ViewModel.CheckoutViewModel
@{
    ViewData["Title"] = "Thanh toán";
}

<h3 class="mb-4">Thanh toán</h3>

<form asp-action="Checkout" method="post">
    <div class="row">
        <!-- Thông tin khách hàng -->
        <div class="col-md-6 mb-4">
            <div class="card p-3">
                <h4>Thông tin giao hàng</h4>
                <div class="mb-3">
                    <label class="form-label">Tên</label>
                    <input asp-for="Order.CustomerName" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input asp-for="Order.CustomerEmail" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Điện thoại</label>
                    <input asp-for="Order.CustomerPhone" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Địa chỉ</label>
                    <input asp-for="Order.ShippingAddress" class="form-control" required />
                </div>
            </div>
        </div>

        <!-- Đơn hàng -->
        <div class="col-md-6 mb-4">
            <div class="card p-3">
                <h4>Đơn hàng của bạn</h4>
                <ul class="list-group mb-3">
                    @foreach (var item in Model.CartItems)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @item.ProductName x @item.Quantity
                            <span>@item.TotalPrice.ToString("N0") ₫</span>
                        </li>
                    }
                </ul>
                <p class="fw-bold">Tổng cộng: $@Model.CartItems.Sum(x => x.TotalPrice).ToString("N0") ₫</p>

                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Sản phẩm</th>
                            <th>Giá</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.CartItems)
                        {
                            <tr>
                                <td>@item.ProductName</td>
                                <td>@item.UnitPrice.ToString("N0") ₫</td>
                                <td>@item.Quantity</td>
                                <td>@item.TotalPrice.ToString("N0") ₫</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <button type="submit" class="btn btn-primary w-100 mt-3">Đặt hàng</button>
            </div>
        </div>
    </div>
</form>
