@model List<Shop.Models.CartItem>
@{
    ViewData["Title"] = "Checkout";
}
<h3>Thanh toán</h3>

<form asp-action="Checkout" method="post">
    <label>Tên</label>
    <input name="name" required />
    <label>Email</label>
    <input name="email" required />
    <label>Điện thoại</label>
    <input name="phone" required />
    <label>Địa chỉ</label>
    <input name="address" required />

    <h4>Đơn hàng của bạn</h4>
    <ul>
        @foreach (var item in Model)
        {
            <li>@item.ProductName x @item.Quantity - $@item.TotalPrice</li>
        }
    </ul>

    <table class="table table-condensed">
        <thead>
            <tr class="cart_menu">
                <td class="image">Sản phẩm</td>
                <td class="description"></td>
                <td class="price">Giá</td>
                <td class="quantity">Số lượng</td>
                <td class="total">Thành tiền</td>
                <td></td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="cart_product">
                        <img src="@item.ProductImage" alt="" style="width: 100px; height: 100px;">
                    </td>
                    <td class="cart_description">
                        <h4><a href="">@item.ProductName</a></h4>
                    </td>
                    <td class="cart_price">
                        <p>$@item.UnitPrice</p>
                    </td>
                    <td class="cart_quantity">
                        <h4><a href="">@item.Quantity</a></h4>
                    </td>
                    <td class="cart_total">
                        <p class="cart_total_price">$@item.TotalPrice</p>
                    </td>
                    <td class="cart_delete">
                        <a class="cart_quantity_delete" href="#" data-cart-item-id="@item.CartItemId"><i class="fa fa-times"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p>Tổng cộng: $@Model.Sum(x => x.TotalPrice)</p>
    <button type="submit">Đặt hàng</button>
</form>
