@model List<Shop.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<h2 class="mb-4">🛍️ Đơn hàng của tôi</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <p class="mb-0">Bạn chưa có đơn hàng nào.</p>
    </div>
}
else
{
    @foreach (var order in Model)
    {
        <div class="card mb-4 shadow-sm">
            <div class="card-header bg-light">
                <div class="row align-items-center">
                    <div class="col-md-3">
                        <strong>Mã đơn:</strong> @order.OrderNumber
                    </div>
                    <div class="col-md-3">
                        <strong>Ngày đặt:</strong> @order.OrderDate.ToString("dd/MM/yyyy HH:mm")
                    </div>
                    <div class="col-md-3">
                        <strong>Trạng thái:</strong>
                        @{
                            string statusText = order.Status switch
                            {
                                "Pending" => "Chờ xử lý",
                                "Processing" => "Đang xử lý",
                                "Shipped" => "Đang giao",
                                "Delivered" => "Đã giao",
                                "Cancelled" => "Đã hủy",
                                _ => order.Status
                            };
                            string statusClass = order.Status switch
                            {
                                "Pending" => "warning",
                                "Processing" => "info",
                                "Shipped" => "primary",
                                "Delivered" => "success",
                                "Cancelled" => "danger",
                                _ => "secondary"
                            };
                        }
                        <span class="badge bg-@statusClass">@statusText</span>
                    </div>
                    <div class="col-md-3 text-end">
                        <strong>Tổng tiền:</strong> <span class="text-danger fw-bold">$@order.TotalAmount.ToString("N2")</span>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <h6 class="mb-3">Sản phẩm trong đơn hàng:</h6>
                @if (order.OrderItems == null || !order.OrderItems.Any())
                {
                    <p class="text-muted"><em>Không có sản phẩm nào trong đơn hàng này.</em></p>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-sm table-bordered mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th style="width: 50px;">Ảnh</th>
                                    <th>Tên sản phẩm</th>
                                    <th class="text-center" style="width: 100px;">Giá</th>
                                    <th class="text-center" style="width: 80px;">Số lượng</th>
                                    <th class="text-end" style="width: 120px;">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in order.OrderItems)
                                {
                                    <tr>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ProductImage))
                                            {
                                                <img src="@item.ProductImage" alt="@item.ProductName" 
                                                     style="width: 50px; height: 50px; object-fit: contain;" />
                                            }
                                            else
                                            {
                                                <div style="width: 50px; height: 50px; background: #f0f0f0; display: flex; align-items: center; justify-content: center;">
                                                    <span class="text-muted small">N/A</span>
                                                </div>
                                            }
                                        </td>
                                        <td>@item.ProductName</td>
                                        <td class="text-center">$@item.UnitPrice.ToString("N2")</td>
                                        <td class="text-center">@item.Quantity</td>
                                        <td class="text-end">$@item.TotalPrice.ToString("N2")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                <div class="mt-3 text-end">
                    <a asp-controller="Account" asp-action="OrderDetail" asp-route-id="@order.OrderId" 
                       class="btn btn-primary">
                        Xem chi tiết đơn hàng
                    </a>
                </div>
            </div>
        </div>
    }
}
