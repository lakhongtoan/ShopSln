@model IEnumerable<Shop.Models.Product>

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    ViewData["Title"] = "Quản lý sản phẩm";
}

<h2>Danh sách sản phẩm</h2>
<a href="@Url.Action("Create")" class="btn btn-success mb-3">+ Thêm sản phẩm</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
            <th>Người tạo</th>
            <th>Ngày tạo</th>
            <th>Cập nhật bởi</th>
            <th>Ngày cập nhật</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductID</td>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td><img src="@Url.Content(p.Image)" style="width:80px" /></td>
                <td>@p.CreatedBy</td>
                <td>@p.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@p.UpdatedBy</td>
                <td>@p.UpdatedAt?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = p.ProductID })" class="btn btn-warning btn-sm">Chỉnh sửa</a>
                    <a href="@Url.Action("Delete", new { id = p.ProductID })" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
